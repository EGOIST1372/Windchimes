{
	"schemaVersion": 1,
	"id": "windchimes",
	"version": "${version}",

	"name": "Windchimes",
	"description": "This mod adds three wind chimes that sway in the wind and occasionally ring. Designed to compliment the vanilla game, this mod has no settings that can be set.",
	"authors": [
		"Hibi"
	],
	"contact": {
		"homepage": "https://hibiscus.pet/mods/windchimes",
		"sources": "https://github.com/Hibiii/Windchimes",
		"issues": "https://github.com/Hibiii/Windchimes/issues"
	},

	"license": "Unlicense",
	"icon": "assets/windchimes/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [
			"hibiii.windchimes.Initializer::onInitialize"
		],
		"client": [
			"hibiii.windchimes.ClientInitializer::onInitializeClient"
		]
	},
	"depends": {
		"fabric": "*",
		"minecraft": ">=1.20"
	},
	"custom": {
		"modmenu": {
			"links": {
				"modmenu.github_releases": "https://github.com/Hibiii/Windchimes/releases/",
				"modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/windchimes",
				"modmenu.modrinth": "https://modrinth.com/mod/windchimes"
			}
		}
	}
}
